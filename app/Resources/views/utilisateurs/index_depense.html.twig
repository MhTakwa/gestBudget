{%extends 'utilisateurs/index.html.twig' %}
{%block add%}
 <form>
<input type="button" value="Nouveau" onclick="window.location.href='{{path('gestion_depense_new')}}'" />
</form> 
{%endblock%}

     {%block body%}
                    <div class="module-head">
                   
                                    <h3>
                        {% if depenses is defined %}
                            Liste des Dépenses({{depenses|length}})</h3>
                                      
                                </div>
                                <div class="module-body table">
                                    <table cellpadding="0" cellspacing="0" border="0" class="datatable-1 table table-bordered table-striped  display"
                                        width="100%">
                                        <thead>
                                            <tr>
                                                <th>
                                                    libellé
                                                </th>
                                                <th>
                                                    date
                                                </th>
                                                 <th>
                                                    montant
                                                </th>
                                               
                                        </thead> <tbody>
        {% for depense in depenses %}
            <tr>
                
                <td>{{ depense.libelle }}</td>
                <td>{{ depense.date}}</td>
                <td>{{ depense.montant}}</td>

                
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('gestion_depense_show', { 'id': depense.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('gestion_depense_edit', { 'id': depense.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
        {%endif%}
    
     </tr></thead></table>

                 {%endblock%}
       
     